<div id="container">

  <!--
    Nested albums, if any
  -->
  {{#if album.albums.length}}
  <div id="albums">
    {{#each album.albums~}}
    <a href="{{relative url}}" style="background-image: url('{{relative previews.0.urls.small}}')">
      <div class="info">
        <h3>{{title}}</h3>
        <div class="summary">{{summary}}</div>
        <!--<div class="date">{{{date stats.fromDate}}} - {{{date stats.toDate}}}</div> - IGNORE -->
      </div>
    </a>
    {{~/each}}
  </div>
  {{/if}}

  <!--
    All photos and videos
  -->
  {{#if album.files.length}}
  <ul id="media" class="clearfix">
    {{#each album.files~}}
    {{> thumbnail}}
    {{~/each}}
  </ul>
  {{/if}}

  <!--
    Pagination
  -->
  {{#compare pagination.length '>' 1}}
  <nav class="pagination">
    Pages:
    {{#each pagination}}
    {{#if current}}
    <a class="page current" href="{{relative url}}">{{index}}</a>
    {{else}}
    <a class="page" href="{{relative url}}">{{index}}</a>
    {{/if}}
    {{/each}}
  </nav>
  {{/compare}}

</div>
