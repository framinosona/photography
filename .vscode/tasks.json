{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["ci"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Install Thumbsup (Legacy)",
      "type": "shell",
      "command": "echo",
      "args": ["Thumbsup is now installed via npm dependencies"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": "Install Dependencies"
    },
    {
      "label": "Build Gallery",
      "type": "shell",
      "command": "npx",
      "args": ["thumbsup", "--config", "config-versioned.json"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "dependsOn": ["Clean Build Output", "Generate Version Info"],
      "dependsOrder": "sequence"
    },
    {
      "label": "Run Server",
      "type": "shell",
      "command": "python3",
      "args": ["-m", "http.server", "8000", "--directory", "build_output"],
      "group": "test",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Setup Everything",
      "dependsOrder": "sequence",
      "dependsOn": ["Install Dependencies"],
      "group": "build"
    },
    {
      "label": "Build and Run",
      "dependsOrder": "sequence",
      "dependsOn": ["Build Gallery", "Run Server"],
      "group": "test"
    }
  ]
}
