{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Gallery Server",
      "type": "debugpy",
      "request": "launch",
      "module": "http.server",
      "args": ["8000", "--directory", "build_output"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "preLaunchTask": "Build Gallery"
    }
  ]
}
